body
  background $cBackground
  color $cLetter
  font-size 14px
  font-family: 'Roboto Slab', serif
h1
  color $cTitle
.container
  padding-left 220px
  padding-right 20px
article
  display flex
aside
  border-right 1px solid lighten($cLetter, 70%)
  height 100%
  left 0
  overflow-x auto
  position fixed
  top 0
  width 200px
ul
  list-style-type none
a
  text-decoration none
  color $cLetter
h2
  margin 0

.article-header
  align-items flex-end
  display flex
  justify-content space-between
  padding-right 20px
  width 100%
  a
    padding 0 6px
    &:hover
      text-decoration underline
.article-body
  display flex
